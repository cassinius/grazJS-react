*, *:before, *:after {
	-webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
	-moz-box-sizing: border-box;    /* Firefox, other Gecko */
	box-sizing: border-box;         /* Opera/IE 8+ */
}

html, body {
	margin: 0;
	padding: 0;
}

body {
	color: black;
	background-color: #DDDDDD;
}

textarea {
	resize: none;
	padding: 8px;
	font-size: 16px;
	color: #999;
	border-radius: 3px;
	box-shadow: inset 0 0 2px grey;
}

#header, #footer {
	padding: 5px;
	font-size: 20px;
	line-height: 50px;
	vertical-align: middle;
	background: #43AA8B;
	color: white;
}

#header {
	position: absolute;
	width: 100%;
	height: 50px;
	box-shadow: 0px 1px 2px grey;
}

#footer {
	position: absolute;
	bottom: 0;
	width: 100%;
	height: 50px;
	box-shadow: 0px -1px 2px grey;
}


#nested-container {
	position: absolute;
	top: 50px;
	bottom: 50px;
	width: 100%;
}


#chatroom-list {
	position: absolute;
	left: 5px;
	width: 240px;
	top: 8px;
	bottom: 8px;
	border-radius: 3px;
	box-shadow: 1px 1px 1px grey;

	background: #CCCCCC;
	padding-left: 5px;
}

#chatroom {
	position: absolute;
	top: 0px;
	bottom: 0px;
	left: 250px;
	right: 0;
}

#messages-area, #newMessageArea {
	left: 5px;
	right: 8px;
	background: white;
	border-radius: 3px;
	box-shadow: 1px 1px 2px grey;
}

#messages-area {
	position: absolute;
	top: 8px;
	bottom: 128px;
	overflow: auto;
}

#newMessageArea {
	position: absolute;
	left: 5px;
	right: 8px;
	bottom: 8px;
	height: 112px;
	padding: 8px;

	#textbox-container {
		position: absolute;
		left: 8px;
		right: 110px;
		bottom: 8px;
		height: 95px;

		textarea {
			width: 100%;
			height: 100%;
		}
	}
}

#send-message	{
	position: absolute;
	top: 15px;
	right: 15px;
	width: 80px;
	height: 50px;

	i.fa-paper-plane {
		font-size: 80px;

		&:hover {
			cursor: pointer;
		}
	}
}